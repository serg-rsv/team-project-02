<li class='films-list__item' data-movie-id='{{id}}'>
  <article class='film-card'>
    <img class='film-card__image' src='{{validPosterUrl}}' alt='{{title}}' />
    <div class='film-card__info-box'>
      <p class='film-card__title'>{{title}}</p>
      <ul class='film-card__infolist'>
        <li class='film-card__infolist-item'>{{#each genresString}}
            {{this}}{{#unless @last}},{{/unless}}
          {{/each}}</li>
        <li class='film-card__infolist-item'>{{releaseYear}}</li>
      </ul>
    </div>
  </article>
</li>